canvas {
	width = 700
	height = 400
}

forall Point p {
	p.icon = Circle {
			strokeWidth : 0.0
			color : rgba(1.0, 0.0, 0.0, 1.0)
			r : 3.0
	}
}

forall Line l {
	l.icon = Line { 
		thickness : 5.0 
		color : rgba(0.1, 0.8, 0.8, 1.0)
	}
}

Point p; Line l 
where IsOn(p, l) {
  encourage pointLineDist(p.icon.center, l.icon, 0) -- point must be on line
}